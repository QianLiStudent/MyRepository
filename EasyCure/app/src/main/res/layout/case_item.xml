<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h10"
        android:layout_marginBottom="@dimen/h10"
        android:layout_marginLeft="@dimen/w20"
        android:layout_marginRight="@dimen/w20"
        app:cardCornerRadius="10dp"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/case_item_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/case_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/disease"
                android:layout_marginLeft="@dimen/w30"
                android:layout_marginTop="@dimen/h10"/>

            <TextView
                android:id="@+id/case_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888888"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginTop="@dimen/h10"
                android:layout_toRightOf="@id/case_item_tv1"/>

            <TextView
                android:id="@+id/case_item_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/polytype"
                android:layout_marginLeft="@dimen/w30"
                android:layout_marginTop="@dimen/h5"
                android:layout_marginBottom="@dimen/h10"
                android:layout_below="@id/case_item_tv1"/>

            <RadioButton
                android:id="@+id/case_item_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/w18"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/case_item_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888888"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginTop="@dimen/h5"
                android:layout_marginBottom="@dimen/h10"
                android:layout_toRightOf="@+id/case_item_tv3"
                android:layout_toLeftOf="@id/case_item_rb"
                android:layout_below="@id/case_item_tv2"/>

            <TextView
                android:id="@+id/case_item_tv5"
                android:text="@string/symptom"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/case_item_tv3"
                android:layout_marginLeft="@dimen/w30"
                android:visibility="gone" />

            <TextView
                android:id="@+id/case_item_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/h6"
                android:layout_marginBottom="@dimen/h6"
                android:layout_marginLeft="@dimen/w30"
                android:layout_marginRight="@dimen/w3"
                android:layout_below="@id/case_item_tv5"
                android:layout_toLeftOf="@id/case_item_rb"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/case_item_tv"
                android:layout_width="wrap_content"
                android:layout_height='wrap_content'
                android:visibility="gone"></TextView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>