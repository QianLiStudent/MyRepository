<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/h10"
    android:paddingBottom="@dimen/h10"
    android:paddingLeft="@dimen/w34"
    android:paddingRight="@dimen/w10">

    <TextView
        android:id="@+id/expand_list_child_item_tv1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/illness_name"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/expand_list_child_item_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="感冒"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/w10"
        android:layout_toRightOf="@id/expand_list_child_item_tv1_label"></TextView>

    <TextView
        android:id="@+id/expand_list_child_item_tv2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/illness_polytype"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/h5"
        android:textStyle="bold"
        android:layout_below="@id/expand_list_child_item_tv1_label"></TextView>
    <TextView
        android:id="@+id/expand_list_child_item_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风寒感冒"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/h5"
        android:layout_marginLeft="@dimen/w10"
        android:layout_below="@id/expand_list_child_item_tv1_label"
        android:layout_toRightOf="@id/expand_list_child_item_tv2_label"></TextView>

</RelativeLayout>