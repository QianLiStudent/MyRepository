<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/about_lv_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h13"
            android:paddingTop="@dimen/h8"
            android:paddingBottom="@dimen/h8"
            android:paddingLeft="@dimen/w5"></TextView>

        <ImageView
            android:id="@+id/about_lv_item_iv"
            android:layout_width="@dimen/w20"
            android:layout_height="@dimen/h15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            ></ImageView>

        <TextView
            android:id="@+id/about_lv_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h10"
            android:textColor="@color/colorGray"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/about_lv_item_iv"
            android:layout_marginRight="@dimen/w6"></TextView>
    </RelativeLayout>

</LinearLayout>